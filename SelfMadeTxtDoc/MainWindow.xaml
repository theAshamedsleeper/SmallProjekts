<Window x:Class="SelfMadeTxtDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelfMadeTxtDoc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,30,0,0" VerticalAlignment="Center" Height="380">
            <TextBox x:Name="InputField" VerticalAlignment="Center" HorizontalAlignment="Center" Width="780" Height="380" Margin="0,10,0,0" TextWrapping="Wrap" FontFamily="Times New Roman" BorderBrush="{x:Null}" Background="{x:Null}" SelectionBrush="#FF66AAED" FontSize="16" AcceptsTab="True" AcceptsReturn="True"/>
        </StackPanel>
        <StackPanel Background="LightGray" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="800">
            <Button x:Name="NewDocBut" HorizontalAlignment="Left" Height="30" Width="30" Margin="5,0,0,0"/>
            <Button x:Name="SaveDocBut" HorizontalAlignment="Left" Height="30" Width="30" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
